<script>
    // paralax effects
    window.addEventListener('scroll', function() {
        let scrollPosition = window.scrollY;
        document.querySelector('.video-bg').style.transform = 'translateY(' + scrollPosition * 0.3 + 'px)';
    });

    // quote banner

     const quotes = [
            // {
            //     name: "Bill Gates",
            //     quote: "Content is king.",
            //     image: "https://pbs.twimg.com/profile_images/1879013694367252480/Gxa-Pspq_400x400.jpg"
            // },
            {
                name: "Seth Godin",
                quote: "Marketing is no longer about the stuff that you make, but about the stories you tell.",
                image: "https://brianondrako.com/wp-content/uploads/2020/10/Seth-Godin-web_headshot_template.jpg"
            },
            {
                name: "Steve Jobs",
                quote: "The most powerful person in the world is the storyteller. The storyteller sets the vision, values, and agenda of an entire generation that is to come.",
                image: "https://www.hollywoodreporter.com/wp-content/uploads/2015/03/steve_jobs_the_man_in_the_machine_still.jpg?w=1440&h=810&crop=1"
            },
            {
                name: "Jeff Bezos",
                quote: "Your brand is what people say about you when you're not in the room.",
                image: "https://static01.nyt.com/images/2024/11/06/multimedia/06jeff-bezos-ktmj/06jeff-bezos-ktmj-mediumSquareAt3X.jpg"
            },
            {
                name: "Gary Vaynerchuk",
                quote: "No matter what you do, your job is to tell a story.",
                image: "https://s.hdnux.com/photos/01/23/60/14/21955385/4/ratio3x2_1920.jpg"
            }
        ];
        
         let currentIndex = 0;
        const quoteContent = document.getElementById('quoteContent');
        const personImage = document.getElementById('personImage');
        const personName = document.getElementById('personName');
        const quoteText = document.getElementById('quoteText');

        function updateQuote(index) {
            personName.innerText = quotes[index].name;
            quoteText.innerText = quotes[index].quote;
            personImage.src = quotes[index].image;
        }

        // Display the first quote immediately
        updateQuote(currentIndex);

        function rotateQuotes() {
            const nextIndex = (currentIndex + 1) % quotes.length;
            quoteContent.style.opacity = '0';
            setTimeout(() => {
                updateQuote(nextIndex);
                quoteContent.style.opacity = '1';
                currentIndex = nextIndex;
            }, 800);
        }

        // Rotate quotes every 5 seconds
        setInterval(rotateQuotes, 4000);


</script>
