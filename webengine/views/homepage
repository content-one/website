<div class="quote-wrapper">
    <div class="quote-banner">
        <div class="quote-content" id="quoteContent">
             <div class="quote-text">
                <h3 class="ubuntu-medium" id="quoteText"></h3>
                <p class="ubuntu-light"  id="personName"></p>
                
            </div>
            <img src="" alt="Person Image" id="personImage">
           
