<script>
  document.addEventListener('DOMContentLoaded', function () {
    var modalEl = document.getElementById('capterraLightboxModal');
    if (!modalEl) return;
    if (typeof bootstrap === 'undefined' || !bootstrap.Modal) return;

    var modalImg = modalEl.querySelector('.capterra-lightbox-image');
    if (!modalImg) return;

    var lightboxModal = new bootstrap.Modal(modalEl, { focus: true });
    document.querySelectorAll('.capterra-lightbox-trigger').forEach(function (trigger) {
      trigger.addEventListener('click', function (event) {
        event.preventDefault();
        var targetSrc = trigger.getAttribute('href');
        var innerImage = trigger.querySelector('img');
        var imgAlt = innerImage ? innerImage.getAttribute('alt') : 'Expanded screenshot';
        modalImg.src = targetSrc;
        modalImg.alt = imgAlt || 'Expanded screenshot';
        lightboxModal.show();
      });
    });

    modalEl.addEventListener('hidden.bs.modal', function () {
      modalImg.src = '';
      modalImg.alt = '';
    });
  });
</script>

