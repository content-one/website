<style>
  .mission-section {
    background: radial-gradient(circle at top left, #0b214b 0%, #071325 35%, #050c18 100%);
  }
  .mission-section__overlay {
    background: linear-gradient(135deg, rgba(14, 116, 144, 0.35), rgba(59, 130, 246, 0.25));
    opacity: 0.85;
  }
  .mission-pill {
    background: #ffffff;
    border-radius: 1.5rem;
  }
  .mission-heritage-card {
    min-height: 220px;
  }
  .mission-heritage-card__image {
    background-image: url('https://hj5v68xn.media.zestyio.com/San-Diego-from-Ferry-Landing.webp');
    background-size: cover;
    background-position: center;
  }
  .mission-heritage-card__overlay {
    background: linear-gradient(145deg, rgba(5, 12, 24, 0.9), rgba(14, 116, 144, 0.7));
  }
  .leadership-card:hover,
  .leadership-card:focus-within {
    transform: translateY(-4px);
    transition: transform 0.2s ease;
  }
</style>

<script>
  (function () {
    if (typeof bootstrap === 'undefined' || !bootstrap.Tooltip) {
      return;
    }
    var tooltipTriggerList = Array.prototype.slice.call(document.querySelectorAll('.leadership-card[data-bs-toggle="tooltip"]'));
    tooltipTriggerList.forEach(function (tooltipTriggerEl) {
      new bootstrap.Tooltip(tooltipTriggerEl, {
        trigger: 'hover focus',
        html: false,
        container: 'body'
      });
    });
  })();
</script>
